<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="px-6 py-8">
        <div class="flex items-center justify-between mb-6">
          <h1 class="text-2xl font-bold text-gray-900">Account Settings</h1>
        </div>

        <%= form_with(model: @user, url: account_settings_path, method: :patch, data: { turbo: false }, class: "space-y-6") do |f| %>
          <% if @user.errors.any? %>
            <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <i class="fas fa-exclamation-circle text-red-400"></i>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="flex items-center space-x-6">
            <div class="relative">
              <% if @user.attachment&.file&.attached? %>
                <%= image_tag @user.attachment.file, class: "w-24 h-24 rounded-full object-cover" %>
              <% else %>
                <div class="w-24 h-24 rounded-full bg-gray-100 flex items-center justify-center">
                  <i class="fas fa-user text-3xl text-gray-400"></i>
                </div>
              <% end %>
            </div>
            <div class="flex-1">
              <%= f.fields_for :attachment, @user.attachment || @user.build_attachment do |attachment_form| %>
                <%= attachment_form.hidden_field :id if @user.attachment&.id %>
                <div>
                  <%= attachment_form.label :file, "Profile Picture", class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1">
                    <%= attachment_form.file_field :file,
                                                   class: "block w-full text-sm text-gray-500
                               file:mr-4 file:py-2 file:px-4
                               file:rounded-full file:border-0
                               file:text-sm file:font-semibold
                               file:bg-indigo-50 file:text-indigo-700
                               hover:file:bg-indigo-100",
                                                   accept: "image/*" %>
                  </div>
                  <p class="mt-1 text-sm text-gray-500">PNG, JPG, GIF up to 10MB</p>
                </div>
              <% end %>
            </div>
          </div>

          <div>
            <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700">Email</label>
            <div class="mt-1 block w-full rounded-md bg-gray-50 border-gray-300 text-gray-500 sm:text-sm p-2">
              <%= @user.email %>
            </div>
          </div>

          <div class="flex justify-end">
            <%= f.submit "Update Account Settings", class: "bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-lg transition duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 