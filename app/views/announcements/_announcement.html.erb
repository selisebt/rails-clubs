<%= turbo_frame_tag announcement do %>
  <tr class="hover:bg-gray-50">
    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
      <%= announcement.message %>
    </td>
    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
      <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
        <%= case announcement.priority
            when 'high'
              'bg-red-100 text-red-800'
            when 'medium'
              'bg-yellow-100 text-yellow-800'
            else
              'bg-green-100 text-green-800'
            end %>">
        <%= announcement.priority&.titleize %>
      </span>
    </td>
    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
      <%= announcement.club&.name %>
    </td>
    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
      <div class="flex justify-end space-x-2">
        <%= link_to "View", announcement_path(announcement), class: "text-indigo-600 hover:text-indigo-900" %>
        <%= link_to "Edit", edit_announcement_path(announcement), class: "text-indigo-600 hover:text-indigo-900" %>
        <%= button_to "Delete", announcement_path(announcement), method: :delete, class: "text-red-600 hover:text-red-900", form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </td>
  </tr>
<% end %> 