<%= form_with(model: announcement, class: "space-y-8") do |f| %>
  <div class="space-y-8 ">

      <div class="flex flex-wrap w-full justify-between">

        <div class="mb-4 w-[calc(40%-32px)] ">
          <%= f.label :title, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "form-input",
              placeholder: "Title*" %>
        </div>

        <div class="w-[calc(50%-32px)] mt-[16px]">
          <%= f.label :priority, class: "form-label" %>
          <div class="mt-1 w-full">
            <div class="dropdown w-full">
              <button type="button" onclick="toggleStatusDropdown()" class="form-input w-full flex items-center justify-between">
                <span id="selectedStatus"><%= event.status&.titleize || 'Select Status' %></span>
                <i class="fas fa-chevron-down ml-2 text-sm"></i>
              </button>
              <div id="statusDropdown" class="dropdown-content">
                <div class="dropdown-item" onclick="selectStatus('draft')">
                  <i class="fas fa-file-alt mr-3"></i>
                  <div>
                    <p class="font-medium">Draft</p>

                  </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="dropdown-item" onclick="selectStatus('published')">
                  <i class="fas fa-check-circle mr-3"></i>
                  <div>
                    <p class="font-medium">Published</p>

                  </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="dropdown-item" onclick="selectStatus('cancelled')">
                  <i class="fas fa-times-circle mr-3"></i>
                  <div>
                    <p class="font-medium">Cancelled</p>

                  </div>
                </div>
              </div>
              <%= f.hidden_field :status %>
            </div>
          </div>
        </div>

        <div class="mb-4 w-[30%]">
          <%= f.label :priority, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.select :priority, 
                options_for_select([
                  ['Low', 'low'],
                  ['Medium', 'medium'],
                  ['High', 'high']
                ], announcement.priority),
                {},
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="mb-4 w-[30%]">
          <%= f.label :club_id, "Club", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.collection_select :club_id, 
                Club.all, 
                :id, 
                :name, 
                { include_blank: "Select a club" },
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="w-[calc(60%-16px)]">
          <%= f.label :message, class: "form-label" %>
          <div class="mt-1">
            <%= f.text_area :message, rows: 3, class: "form-input" %>
          </div>
        </div>

        
      </div>

  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to "Cancel", announcements_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= f.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %> 


<script>
  function toggleStatusDropdown() {
    document.getElementById("statusDropdown").classList.toggle("show");
  }

  function selectStatus(status) {
    document.getElementById("selectedStatus").textContent = status.charAt(0).toUpperCase() + status.slice(1);
    document.getElementById("event_status").value = status;
    document.getElementById("statusDropdown").classList.remove("show");
  }

  // Close dropdown when clicking outside
  document.addEventListener('click', function(event) {
    if (!event.target.closest('.dropdown')) {
      const dropdowns = document.getElementsByClassName("dropdown-content");
      Array.from(dropdowns).forEach(dropdown => {
        if (dropdown.classList.contains('show')) {
          dropdown.classList.remove('show');
        }
      });
    }
  });
</script>