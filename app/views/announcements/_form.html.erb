<%= form_with(model: announcement, class: "space-y-8") do |f| %>
  <div class="space-y-8 ">

      <div class="flex flex-wrap w-full justify-between">

        <div class="mb-4 w-[calc(40%-32px)] ">
          <%= f.label :title, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "form-input",
              placeholder: "Title*" %>
        </div>

        <div class="w-[calc(30%)]">
          <%= f.label :priority, class: "form-label" %>
          <div class="mt-1 w-full">
            <div class="dropdown w-full">
              <button type="button" onclick="togglePriorityDropdown()" class="form-input w-full flex items-center justify-between">
                <span id="selectedPriority"><%= announcement.priority&.titleize || 'Select Priority' %></span>
                <i class="fas fa-chevron-down ml-2 text-sm"></i>
              </button>
              <div id="priorityDropdown" class="dropdown-content">
                <div class="dropdown-item" onclick="selectPriority('low')">

                  <div>
                    <p class="font-medium">Low</p>
                  </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="dropdown-item" onclick="selectPriority('medium')">

                  <div>
                    <p class="font-medium">Medium</p>
                  </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="dropdown-item" onclick="selectPriority('high')">

                  <div>
                    <p class="font-medium">High</p>
                  </div>
                </div>
              </div>
              <%= f.hidden_field :priority %>
            </div>
          </div>
        </div>

        <div class="w-[30%]">
          <%= f.label :club_id, "Club", class: "form-label" %>
          <div class="mt-1 w-full">
            <div class="dropdown w-full">
              <button type="button" onclick="toggleClubDropdown()" class="form-input w-full flex items-center justify-between">
                <span id="selectedClub"><%= announcement.club&.name || 'Select Club' %></span>
                <i class="fas fa-chevron-down ml-2 text-sm"></i>
              </button>
              <div id="clubDropdown" class="dropdown-content">
                <% Club.all.each do |club| %>
                  <div class="dropdown-item" onclick="selectClub('<%= club.id %>', '<%= club.name %>')">

                    <div>
                      <p class="font-medium"><%= club.name %></p>
                    </div>
                  </div>
                  <% unless club == Club.last %>
                    <div class="dropdown-divider"></div>
                  <% end %>
                <% end %>
              </div>
              <%= f.hidden_field :club_id %>
            </div>
          </div>
        </div>

        <div class="w-[calc(60%-16px)]">
          <%= f.label :message, class: "form-label" %>
          <div class="mt-1">
            <%= f.text_area :message, rows: 3, class: "form-input" %>
          </div>
        </div>

        
      </div>

  </div>

  <div class="flex justify-end pt-5">
    <div class="flex justify-end w-fit space-x-2">
      <%= link_to "Cancel", announcements_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= f.submit class: "btn-primary" %>
    </div>
  </div>
<% end %> 


<script>
  function togglePriorityDropdown() {
    document.getElementById("priorityDropdown").classList.toggle("show");
  }

  function selectPriority(priority) {
    document.getElementById("selectedPriority").textContent = priority.charAt(0).toUpperCase() + priority.slice(1);
    document.getElementById("announcement_priority").value = priority;
    document.getElementById("priorityDropdown").classList.remove("show");
  }

  function toggleClubDropdown() {
    document.getElementById("clubDropdown").classList.toggle("show");
  }

  function selectClub(clubId, clubName) {
    document.getElementById("selectedClub").textContent = clubName;
    document.getElementById("announcement_club_id").value = clubId;
    document.getElementById("clubDropdown").classList.remove("show");
  }

  // Close dropdowns when clicking outside
  document.addEventListener('click', function(event) {
    if (!event.target.closest('.dropdown')) {
      const dropdowns = document.getElementsByClassName("dropdown-content");
      Array.from(dropdowns).forEach(dropdown => {
        if (dropdown.classList.contains('show')) {
          dropdown.classList.remove('show');
        }
      });
    }
  });
</script>