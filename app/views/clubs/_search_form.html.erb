<div class="mt-8" data-controller="search">
  <h2 class="text-2xl font-bold mb-4">Add Members</h2>
  
  <%= form_with url: search_members_club_path(@club), 
                method: :get, 
                data: { 
                  search_target: "form",
                  action: "input->search#perform"
                } do |f| %>
    <div class="flex space-x-2">
      <%= f.text_field :query, 
          placeholder: "Search members...", 
          class: "block w-full rounded-lg border border-gray-300 px-4 py-2.5 text-gray-900 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
          data: { search_target: "input" } %>
    </div>
  <% end %>

  <div id="search-results" class="mt-4" data-search-target="results">
    <%= render 'search_results' %>
  </div>
</div> 