<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @club.name %></h1>
    <div class="space-x-4">
      <%= link_to 'Edit', edit_club_path(@club), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
      <%= button_to 'Delete', club_path(@club), method: :delete, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600", data: { confirm: 'Are you sure?' } %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <h2 class="text-xl font-semibold mb-2">Description</h2>
    <p class="text-gray-700"><%= @club.description %></p>
  </div>

  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">Members</h2>
    <div class="space-y-2">
      <% @club.users.each do |user| %>
        <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
          <div>
            <p class="font-medium"><%= user.name %></p>
            <p class="text-gray-600"><%= user.email %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%= render 'search_form' %>
</div> 