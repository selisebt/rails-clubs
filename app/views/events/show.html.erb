<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-start mb-6">
      <div>
        <h1 class="text-3xl font-bold mb-2">Event Details</h1>
        <p class="text-gray-600">Viewing event details for <%= @club.name %></p>
      </div>
      <div class="space-x-2">
        <%= link_to 'Edit', edit_club_event_path(@club, @event), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
        <%= button_to 'Delete', club_event_path(@club, @event), method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded", data: { confirm: 'Are you sure?' } %>
      </div>
    </div>

    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @event.description %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Start Time</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @event.from.strftime("%B %d, %Y %H:%M") %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">End Time</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @event.to.strftime("%B %d, %Y %H:%M") %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
              <%= case @event.status
                  when 'ongoing'
                    'bg-green-100 text-green-800'
                  when 'completed'
                    'bg-gray-100 text-gray-800'
                  else
                    'bg-yellow-100 text-yellow-800'
                  end %>">
              <%= @event.status.titleize %>
            </span>
          </dd>
        </div>
      </dl>
    </div>

    <div class="mt-8">
      <%= link_to 'Back to Events', club_events_path(@club), class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </div>
</div> 