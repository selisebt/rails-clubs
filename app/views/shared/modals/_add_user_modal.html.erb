<div data-users-index-target="addUserModal" class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center hidden z-[100]">
  <div class="modal-content bg-white rounded-lg shadow-xl w-full max-w-md mx-4" data-action="users-index#stopPropagation">
    <!-- Modal Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">Add New User</h3>
        <button type="button" data-action="users-index#closeAddUserModal" class="text-gray-400 hover:text-gray-500">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>
    
    <!-- Modal Body -->
    <div class="px-6 py-4">
      <form id="addCustomerForm" class="space-y-4">
        <div>
          <label for="customerEmail" class="form-label">Email Address</label>
          <input type="email"
                 data-users-index-target="addUserEmail"
                 name="customerEmail" 
                 class="form-input"
                 placeholder="Enter email address">
        </div>
     

        <div>
          <label for="customerName" class="form-label">Name</label>
          <input type="text"
                 data-users-index-target="addUserName"
                 name="customerName" 
                 class="form-input"
                 placeholder="Enter name">
        </div>
        
        <div>
          <label for="customerRole" class="form-label">Role</label>
          <select data-users-index-target="addUserRole"
                  name="customerRole"
                  class="form-input">
            <option value="">Select role</option>
            <option value="Admin">Admin</option>
            <option value="Member">Member</option>
            <option value="Viewer">Viewer</option>
          </select>
        </div>
      </form>
    </div>
    
    <!-- Modal Footer -->
    <div class="px-6 py-4 bg-gray-50 rounded-b-lg flex justify-end space-x-3">
      <button type="button"
              data-action="users-index#closeAddUserModal"
              class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
        Cancel
      </button>
      <button type="button"
              data-action="users-index#submitAddUser"
              class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700">
        Add User
      </button>
    </div>
  </div>
</div>

<style>
  [data-users-index-target="addUserModal"] {
    z-index: 100;
  }

  [data-users-index-target="addUserModal"]:not(.hidden) {
    animation: fadeIn 0.2s ease-in-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style> 