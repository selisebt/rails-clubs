<div id="csvModal" data-users-index-target="csvModal" class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center hidden z-[100]">
  <div class="modal-content bg-white rounded-lg shadow-xl w-full max-w-md mx-4">
    <!-- Modal Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">Upload Users CSV</h3>
        <button data-action="users-index#closeCsvModal" class="text-gray-400 hover:text-gray-500">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>
    <form id="csvUploadForm" action="/users/invitation" method="post" enctype="multipart/form-data" data-action="users-index#submitCsvUpload">
      <!-- Modal Body -->
      <div class="px-6 py-4">
        <div class="space-y-4">
          <div class="w-full">
            <div data-users-index-target="dropZone" class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-blue-500 transition-colors duration-200">
              <input type="file" name="csv" data-users-index-target="fileInput" class="hidden" accept=".csv">
              <div class="space-y-2" data-users-index-target="dropContent">
                <i class="fas fa-cloud-upload-alt text-4xl text-gray-400"></i>
                <p class="text-gray-600">Drag and drop your CSV file here, or</p>
                <button type="button" data-action="users-index#triggerFileInput" class="text-blue-500 hover:text-blue-700 font-medium">
                  browse files
                </button>
              </div>
              <div data-users-index-target="fileInfo" class="hidden space-y-2">
                <i class="fas fa-file-csv text-4xl text-green-500"></i>
                <p class="text-gray-800 font-medium" data-users-index-target="fileName"></p>
                <button type="button" data-action="users-index#removeFile" class="text-red-500 hover:text-red-700 text-sm">
                  Remove file
                </button>
              </div>
            </div>
            <div data-users-index-target="fileError" class="hidden mt-2 text-sm text-red-500">
              Please select a CSV file to upload
            </div>
            <p class="mt-2 text-sm text-gray-500">File must be a CSV with headers: name, email, role_id</p>
          </div>
        </div>
      </div>

      <!-- Modal Footer -->
      <div class="px-6 py-4 bg-gray-50 rounded-b-lg flex justify-end space-x-3">
        <button data-action="users-index#closeCsvModal" data-turbo="false" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
          Cancel
        </button>
        <button class="btn-primary">
          Upload CSV
        </button>
      </div>
    </form>

  </div>
</div> 