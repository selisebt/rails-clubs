<div data-users-index-target="inviteModal" class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center hidden z-[100]">
  <div class="modal-content bg-white rounded-lg shadow-xl w-full max-w-md mx-4" data-action="users-index#stopPropagation">
    <!-- Modal Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">Invite User</h3>
        <button type="button" data-action="users-index#closeModal" class="text-gray-400 hover:text-gray-500">
          <i class="fas fa-times"></i>
        </button>
      </div>
    </div>


    <%= form_with(model: User.new, url: user_invitation_path, method: :post, class: "space-y-4", data: { turbo: false }) do |f| %>
      <!-- Modal Body -->
      <div class="px-6 py-4">
        <div>
          <%= f.label :email, "Email Address", class: "form-label" %>
          <%= f.email_field :email,
                            class: "form-input",
                            placeholder: "Enter email address",
                            data: { users_index_target: "inviteEmail" } %>
        </div>
        <div>
          <%= f.label :name, "Name", class: "form-label" %>
          <%= f.text_field :name,
                           class: "form-input",
                           placeholder: "Enter name" %>
        </div>
        <div>
          <%= f.label :role_id, "Role", class: "form-label" %>
          <%= f.collection_select :role_id,
                                  Role.all,
                                  :id,
                                  :name,
                                  { prompt: "Select a role" },
                                  class: "form-input" %>
        </div>
      </div>

      <!-- Modal Footer -->
      <div class="px-6 py-4 bg-gray-50 rounded-b-lg flex justify-end space-x-3">
        <button type="button"
                data-action="users-index#closeModal"
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
          Cancel
        </button>
        <button type="submit"
                class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700">
          Send Invitation
        </button>
      </div>
    <% end %>
  </div>
</div> 