<%= turbo_frame_tag 'delete_user' do %>
  <%= form_with(model: user, method: :delete, class: "space-y-6", data: { turbo_frame: 'all_users' }) do |f| %>
    <!-- Modal Body -->
    <div class="px-6 py-4">
      <div class="text-center">
        <i class="fas fa-exclamation-triangle text-5xl text-red-500 mb-4"></i>
        <p class="text-gray-700 mb-2">Are you sure you want to delete this user?</p>
        <p class="text-gray-500 text-sm"><%= user.name %></p>
      </div>
    </div>
    
    <!-- Modal Footer -->
    <div class="px-6 py-4 bg-gray-50 rounded-b-lg flex justify-end space-x-3">
      <button type="button" data-action="users-index#closeDeleteModal" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
        Cancel
      </button>
      <%= f.submit "Delete User",
                  class: "px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700" %>
    </div>
  <% end %>
<% end %> 